{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite"],
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "lineWidth": 80,
    "formatWithErrors": true,
    "useEditorconfig": true
  },
  "css": {
    "formatter": {
      "lineWidth": 120
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "files": {
    "ignoreUnknown": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noStaticElementInteractions": "off",
        "noNoninteractiveElementInteractions": "off",
        "useSemanticElements": "off",
        "useAltText": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "off",
        "noUselessStringRaw": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noUnknownTypeSelector": "off",
        "noNestedComponentDefinitions": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "performance": {
        "noBarrelFile": "off",
        "noImgElement": "off",
        "useTopLevelRegex": "off"
      },
      "style": {
        "noMagicNumbers": "off",
        "useFilenamingConvention": "off",
        "noNestedTernary": "off",
        "noParameterAssign": "off",
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "useAwait": "off",
        "noExplicitAny": "off",
        "noUnknownAtRules": "off",
        "noArrayIndexKey": "off",
        "noImplicitAnyLet": "off",
        "noEvolvingTypes": "off"
      },
      "nursery": {
        "noShadow": "off",
        "useMaxParams": "off",
        "useImageSize": "off",
        "noReactForwardRef": "off",
        "noUnusedExpressions": "off",
        "useSortedClasses": {
          "fix": "safe",
          "options": {
            "attributes": ["classList", "className"],
            "functions": ["clsx", "cva", "tw", "cn"]
          },
          "level": "warn"
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  }
}
