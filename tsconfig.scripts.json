{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "isolatedModules": false,
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/scripts/**/*.{ts,mts}",
    "./src/config/**/*.ts",
    "./src/registry/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
